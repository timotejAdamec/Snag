CREATE TABLE IF NOT EXISTS PullSyncTimestampEntity (
    entityType TEXT NOT NULL,
    scopeId TEXT,
    lastSyncedAt INTEGER NOT NULL,
    PRIMARY KEY (entityType, scopeId)
);

getByEntityTypeAndScope:
SELECT lastSyncedAt FROM PullSyncTimestampEntity WHERE entityType = :entityType AND scopeId IS :scopeId;

upsert:
INSERT INTO PullSyncTimestampEntity(entityType, scopeId, lastSyncedAt) VALUES (?, ?, ?)
ON CONFLICT(entityType, scopeId) DO UPDATE SET lastSyncedAt = excluded.lastSyncedAt;
